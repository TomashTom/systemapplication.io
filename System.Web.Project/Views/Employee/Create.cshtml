@model System.Web.Project.Models.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="create-employee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeName" class="control-label"></label>
                <input asp-for="Employee.EmployeeName" class="form-control" />
                <span asp-validation-for="Employee.EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeSurname" class="control-label"></label>
                <input asp-for="Employee.EmployeeSurname" class="form-control" />
                <span asp-validation-for="Employee.EmployeeSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmployeePhone" class="control-label"></label>
                <input asp-for="Employee.EmployeePhone" class="form-control" />
                <span asp-validation-for="Employee.EmployeePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeAddress" class="control-label"></label>
                <input asp-for="Employee.EmployeeAddress" class="form-control" />
                <span asp-validation-for="Employee.EmployeeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeCity" class="control-label"></label>
                <input asp-for="Employee.EmployeeCity" class="form-control" />
                <span asp-validation-for="Employee.EmployeeCity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
             <label>Department</label>
                @Html.DropDownList("Department", Model.Department, "Select a Department", new { @class= "form-control required" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="mt-3">
    <a asp-action="Index" asp-controller="Index" class="btn btn-secondary">Back to Main Page</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
